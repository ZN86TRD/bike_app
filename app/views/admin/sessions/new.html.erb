<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 mx-auto card p-4 shadow-sm border-danger">
      <h2 class="text-center mb-4 font-weight-bold text-danger">管理者ログイン</h2>

      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        
        <div class="form-group mb-3">
          <%= f.label :email, "管理者メールアドレス" %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "admin@example.com" %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "管理者としてログイン", class: "btn btn-danger w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>