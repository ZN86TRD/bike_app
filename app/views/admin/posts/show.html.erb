<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="mb-4 bg-light p-2 border-start border-4 border-primary">投稿詳細（管理者用）</h2>
      
      <div class="card shadow-sm p-4 mt-3">
        <div class="text-center mb-4">
          <% if @post.image.attached? %>
            <%= image_tag @post.image.variant(resize_to_limit: [600, 400]).processed, class: "img-fluid rounded shadow-sm border" %>
          <% else %>
            <div class="bg-light d-flex align-items-center justify-content-center rounded mx-auto border" style="width: 400px; height: 300px;">
              <span class="text-muted">No Image</span>
            </div>
          <% end %>
        </div>

        <h4 class="fw-bold"><%= @post.title %></h4>
        <p class="mt-3 text-muted small">投稿日: <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        <hr>
        
        <p class="mt-3" style="white-space: pre-wrap;"><%= @post.body %></p>
        <p class="text-end text-muted">投稿者: <%= @post.user.name %></p>

        <div class="mt-5 d-flex justify-content-between border-top pt-3">
          <%= link_to "ユーザー詳細へ戻る", admin_user_path(@post.user), class: "btn btn-outline-secondary" %>
          <%= link_to "この投稿を削除する", admin_post_path(@post), method: :delete, data: { confirm: "管理者としてこの投稿を削除します。よろしいですか？" }, class: "btn btn-danger" %>
        </div>
      </div>
      <hr class="my-5">

      <h3 class="mb-4">コメント管理 (<%= @post.post_comments.count %>件)</h3>
      
      <div class="card shadow-sm mb-5">
        <div class="card-body p-0">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 20%">投稿者</th>
                <th>内容</th>
                <th style="width: 20%">操作</th>
              </tr>
            </thead>
            <tbody>
              <% @post.post_comments.each do |comment| %>
                <tr>
                  <td class="align-middle">
                    <%= link_to comment.user.name, admin_user_path(comment.user), class: "text-decoration-none fw-bold" %>
                  </td>
                  <td class="align-middle small">
                    <%= comment.comment %>
                    <div class="text-muted" style="font-size: 0.75rem;">
                      <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
                    </div>
                  </td>
                  <td class="align-middle text-end">
                    <%= link_to "削除", admin_post_post_comment_path(@post, comment), method: :delete, data: { confirm: "このコメントを削除します。よろしいですか？" }, class: "btn btn-sm btn-outline-danger me-2" %>
                  </td>
                </tr>
              <% end %>
              <% if @post.post_comments.empty? %>
                <tr>
                  <td colspan="3" class="text-center text-muted p-4">コメントはありません</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>