<div class="container mt-5">
  <h2 class="mb-4">グループ管理一覧</h2>

  <table class="table table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>ジャンル</th>
        <th>グループ名</th>
        <th>作成者ID</th>
        <th>作成日時</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
          <td><span class="badge badge-secondary"><%= group.genre.name %></span></td>
          <td><%= group.name %></td>
          <td>User ID: <%= group.owner_id %></td>
          <td><%= group.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td>
            <%= link_to '削除', admin_group_path(group), 
                        method: :delete, 
                        data: { confirm: "管理者としてこのグループを完全に削除します。よろしいですか？" }, 
                        class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @groups.empty? %>
    <p class="text-center mt-5 text-muted">グループは存在しません。</p>
  <% end %>
</div>
