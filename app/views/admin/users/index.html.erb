<div class="container mt-5">
  <div class="row">
    <div class="col-md-11 mx-auto">
      <h2 class="mb-4 bg-light p-2 border-start border-4 border-primary">ユーザー一覧</h2>
      
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <table class="table table-hover mb-0">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th class="text-center">ステータス</th> 
                <th class="text-center">アクション</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td class="align-middle"><%= user.id %></td>
                  <td class="align-middle">
                    <%= link_to admin_user_path(user), class: "text-decoration-none fw-bold text-dark" do %>
                      <%= user.name %>
                    <% end %>
                  </td>
                  <td class="align-middle"><%= user.email %></td>
                  
                  <td class="align-middle text-center">
                    <% if user.email == 'guest@example.com' %>
                      <span class="badge rounded-pill bg-info text-dark">ゲスト</span>
                    <% elsif user.is_active == false %>
                      <span class="badge rounded-pill bg-danger">退会済み</span>
                    <% else %>
                      <span class="badge rounded-pill bg-success">有効</span>
                    <% end %>
                  </td>

                  <td class="align-middle text-center">
                    <%= link_to "詳細", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>