<div class="container mt-5">
  <h2 class="mb-4 bg-light p-2 border-start border-4 border-primary">管理者ダッシュボード</h2>

  <div class="row mt-4">
    <div class="col-md-3">
      <div class="card bg-primary text-white shadow-sm mb-4">
        <div class="card-body text-center">
          <h5 class="card-title">ユーザー総数</h5>
          <h2 class="display-4"><%= @users_count %></h2>
          <%= link_to "一覧を見る", admin_users_path, class: "text-white small text-decoration-none" %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-success text-white shadow-sm mb-4">
        <div class="card-body text-center">
          <h5 class="card-title">投稿総数</h5>
          <h2 class="display-4"><%= @posts_count %></h2>
          <p class="small mb-0">本日: <%= @today_posts_count %>件</p>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-info text-white shadow-sm mb-4">
        <div class="card-body text-center">
          <h5 class="card-title">コメント総数</h5>
          <h2 class="display-4"><%= @comments_count %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-secondary text-white shadow-sm mb-4">
        <div class="card-body text-center">
          <h5 class="card-title">退会済みユーザー</h5>
          <h2 class="display-4"><%= User.where(is_active: false).count %></h2>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="list-group shadow-sm">
      <%= link_to "ユーザー管理画面へ", admin_users_path, class: "list-group-item list-group-item-action" %>
    </div>
  </div>
</div>