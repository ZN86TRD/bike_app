<div class="container py-5">
  <h2>メール一斉送信 (<%= @group.name %>)</h2>
  
  <% #エラーメッセージ %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: group_event_notices_path(@group), local: true do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :body, "本文" %>
      <%= f.text_area :body, class: "form-control", rows: 10, required: true %>
    </div>
    <%= f.submit "送信する", class: "btn btn-primary shadow-sm" %>
  <% end %>
</div>