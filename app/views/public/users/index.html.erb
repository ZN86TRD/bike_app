<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2>ユーザー一覧</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>イメージ</th>
            <th>ユーザー名</th>
            <th>詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "50x50", class: "rounded-circle" %>
                <% else %>
                  <%= image_tag 'no_image.jpg', size: "50x50", class: "rounded-circle" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "詳細を見る", user_path(user), class: "btn btn-sm btn-outline-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>