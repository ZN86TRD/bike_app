<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2 class="mb-4">ユーザー情報編集</h2>
      
      <div class="card shadow-sm p-4">
        <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
          
          <div class="form-group mb-3">
            <%= f.label :profile_image, "プロフィール画像" %>
            <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file d-block" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="text-center mt-4">
            <%= f.submit "変更を保存", class: "btn btn-primary px-5" %>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-3">
        <%= link_to "マイページへ戻る", mypage_path %>
      </div>
    </div>
  </div>
</div>