<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2 class="mb-4">ユーザー情報編集</h2>
      
      <div class="card shadow-sm p-4">
        <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
          <%= render 'public/shared/error_messages', obj: @user %>
          <div class="form-group mb-3 text-center">
            <%= f.label :profile_image, "プロフィール画像" %><br>
            <%= image_tag @user.get_profile_image(100, 100), 
                id: "image-preview", 
                class: "rounded-circle mb-2 shadow-sm", 
                style: "width: 100px; height: 100px; object-fit: cover;" %>
            <%= f.file_field :profile_image, 
                   accept: "image/jpeg, image/jpg", 
                   id: "user-image-input", 
                   class: "form-control-file d-block mx-auto" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :name, "名前(必須)" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :introduction, "自己紹介" %>
            <%= f.text_area :introduction, class: "form-control", rows: 5, placeholder: "自己紹介文を入力" %>
          </div>

          <div class="text-center mt-4">
            <%= f.submit "変更を保存", class: "btn btn-primary px-5" %>
            <%= link_to "退会する", confirm_withdraw_user_path(@user), class: "btn btn-outline-danger ml-3" %>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-4 mb-5">
        <%= link_to "マイページへ戻る", mypage_path, class: "text-secondary" %>
      </div>
    </div>
  </div>
</div>