<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto shadow p-4 bg-white rounded">
      <h2 class="mb-4">新規グループ作成</h2>

      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group mb-3">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, @genres, :id, :name, { include_blank: "ジャンルを選択してください" }, { class: "form-control", required: true } %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :name, "グループ名" %>
          <%= f.text_field :name, class: "form-control", placeholder: "例：グループ名を入力してください" %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :description, "グループ紹介文" %>
          <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "グループの説明を入力してください" %>
        </div>

        <div class="text-center">
          <%= f.submit "グループを作成する", class: "btn btn-success px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>