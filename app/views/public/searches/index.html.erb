<div class="container">
  <h2 class="py-4">"<%= @word %>" の検索結果（<%= @range == 'User' ? 'ユーザー' : '投稿' %>）</h2>

  <table class="table table-hover">
    <% if @range == "User" %>
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= link_to "詳細", user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <thead>
        <tr>
          <th>投稿タイトル</th>
          <th>投稿者</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.user.name %></td>
            <td><%= link_to "詳細", post_path(post) %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
  
  <% if @results.empty? %>
    <p class="text-center">一致する結果は見つかりませんでした。</p>
  <% end %>
</div>
