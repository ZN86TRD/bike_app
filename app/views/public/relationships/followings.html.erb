<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>フォロー一覧</h2>
      
      <% if @users.exists? %>
        <table class="table table-hover mt-3">
          <thead>
            <tr class="table-secondary">
              <th>ユーザー名</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td>
                  <%= render "public/relationships/btn", user: user %>
                </td>
                <td>
                  <%= link_to "詳細を見る", user_path(user), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="mt-4 text-muted">フォローしているユーザーはまだいません。</p>
      <% end %>

      <div class="mt-4">
        <%= link_to "マイページへ戻る", user_path(current_user), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>